<Window x:Class="Try.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Try"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="ControlTemplateButton" TargetType="Button">
            <Border BorderBrush="Orange" BorderThickness="3" CornerRadius="10" Background="Red" TextBlock.Foreground="White" >
                <ContentPresenter RecognizesAccessKey="True" Margin="{TemplateBinding Padding}"/>
            </Border> 
        </ControlTemplate>
    </Window.Resources>
    <StackPanel>
        <Button Content="Click _me" Margin="10" Padding="5" Template="{StaticResource ControlTemplateButton}" Width="100" />
    </StackPanel>
</Window>
